<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
      <%= image_tag pin.image.url(:medium) %>
      <div class="panel-body">
      <%= pin.description %>
      <%= pin.user.email if pin.user %><br>
      <%= link_to 'Show', pin, class: "btn btn-danger" %>
      <% if pin.user == current_user %>
        <%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-danger" %>
        <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      <% end %>
      </div>
     </div> 
  <% end %>
</div>  

