<%= render 'pages/home' unless user_signed_in? %>

<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(pin.image.url(:medium)), pin, class: "btn btn-danger" %>
      <div class="panel-body">
      <p><%= pin.description %></p>
      <strong><%= pin.user.email if pin.user %></strong>
      <% if pin.user == current_user %>
        <div class="actions">
          <%= link_to raw('<i class="icon ion-edit"></i> Edit'), edit_pin_path(pin), class: "btn btn-danger" %>
          <%= link_to raw('<i class="icon ion-android-trash"></i> Destroy'), pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>    
      <% end %> 
     </div> 
   </div>
  <% end %>
</div>

